{
   "app_key" : "system.generated.vrviz_gl",
   "bindings" : {
      "/actions/vrviz" : {
         "haptics" : [
            {
               "output" : "/actions/vrviz/out/haptic_right",
               "path" : "/user/hand/right/output/haptic"
            },
            {
               "output" : "/actions/vrviz/out/haptic_left",
               "path" : "/user/hand/left/output/haptic"
            }
         ],
         "poses" : [
            {
               "output" : "/actions/vrviz/in/hand_left",
               "path" : "/user/hand/left/pose/raw"
            },
            {
               "output" : "/actions/vrviz/in/hand_right",
               "path" : "/user/hand/right/pose/raw"
            }
         ],
         "sources" : [
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/vrviz/in/TwistCommand"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/right/input/trigger"
            },
            {
               "inputs" : {
                  "position" : {
                     "output" : "/actions/vrviz/in/AnalogInput"
                  }
               },
               "mode" : "trackpad",
               "path" : "/user/hand/right/input/trackpad"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/vrviz/in/MoveWorld"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/right/input/trackpad"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/vrviz/in/ResetGame"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/right/input/application_menu"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/vrviz/in/TwistCommand"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/left/input/trigger"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/vrviz/in/MoveWorld"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/left/input/trackpad"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/vrviz/in/ResetGame"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/left/input/application_menu"
            },
            {
               "inputs" : {
                  "position" : {
                     "output" : "/actions/vrviz/in/AnalogInput"
                  }
               },
               "mode" : "trackpad",
               "path" : "/user/hand/left/input/trackpad"
            }
         ]
      }
   },
   "controller_type" : "vive_controller",
   "description" : "Bindings for the ROS node VRViz for the Vive controller",
   "name" : "VRViz bindings for Vive Controller"
}
